
<!DOCTYPE html>
<html>
<head>
    @Html.Partial("_Header")
</head>
<body>
    @Html.Partial("_LoadingPage")
    <div id="customAlert"></div>
    <div id="customConfirm"></div>
    <div id="customPrompt" style="overflow: unset;"></div>

    <div id="baseUrl" style="visibility: hidden">@ViewBag.SiteUrl</div>

    <div class="container">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        @if ((bool)ViewBag.IsLoggedIn)
        {
            Html.RenderPartial("_topmenu");
        }
    </div>



    <div class="container body-content" style="@(ViewBag.IsCustomContainer ? "min-width: 1452px; " : "")">

        <div id="containerBody">
            @RenderBody()
        </div>
    </div>


</body>
</html>
