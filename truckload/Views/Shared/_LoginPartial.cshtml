@* @using Microsoft.AspNet.Identity *@
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new
    {
        id = "logoutForm",
        @class = "navbar-right"
    }))
    {
        @Html.AntiForgeryToken() <ul class="nav navbar-nav navbar-right" style="position: absolute;right: 15px">
            <li>
                @Html.ActionLink(ViewData["DisplayName"] + " ("+ ViewData["AccessLevel"]+")", "Index", "Home", routeValues: null, htmlAttributes: new
                {
                    //title = "Manage"
                })
            </li>
            <li> <a href="javascript:document.getElementById('logoutForm').submit()"> Log off </a></li>
        </ul>
    }
}
else
{ <ul class="nav navbar-nav navbar-right" style="position: absolute;right: 15px">
        <li>
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new
            {
                id = "loginLink"
            })
        </li>
    </ul>
}