@{
    var isAdmin = (bool)ViewBag.IsAdmin;
    var siteUrl = ViewBag.SiteUrl;
}

<ul id="menu">
    <li>Order Central</li>
    <li>
        <a onclick="onClickMenuItem('@(siteUrl + "Home/Index")')">Home</a>
    </li>
    <li>
        Views
        <div class="k-animation-container">
            <ul class="k-group k-menu-group k-popup k-reset">
                <li><a onclick="onClickMenuItem('@(siteUrl + "TlViews/Index?viewName=Drivers")')">Drivers</a></li>
                <li><a onclick="onClickMenuItem('@(siteUrl + "TlViews/Index?viewName=Trucks")')">Trucks</a></li>
                <li><a onclick="onClickMenuItem('@(siteUrl + "TlViews/Index?viewName=Trailers")')">Trailers</a></li>
            </ul>
        </div>
    </li>
    <li class="@(!isAdmin? "k-state-disabled": "")">
        <img src="~/App/Content/images/admin_small.png" />
        Admin
        <div class="k-animation-container">
            <ul class="k-group k-menu-group k-popup k-reset">
                <li><a onclick="onClickMenuItem('@(siteUrl + "Admin/EditUsers")')">Old User Logins</a></li>
                <li><a onclick="onClickMenuItem('@(siteUrl + "UserLogin/Edit")')">User Logins</a></li>
                <li><a onclick="onClickMenuItem('@(siteUrl + "Admin/TestGrid")')">Test Grid</a></li>
                <li><a onclick="onClickMenuItem('@(siteUrl + "Driver/Edit")')">Drivers</a></li>
                <li><a onclick="onClickMenuItem('@(siteUrl + "Truck/Edit")')">Trucks</a></li>
                <li><a onclick="onClickMenuItem('@(siteUrl + "Trailer/Edit")')">Trailers</a></li>
            </ul>
        </div>
    </li>
</ul>

<script>
    function onClickMenuItem(url) {
        $("#containerBody").hide();
        $("#preLoad").show();
        location.assign(url);
    }
</script>
