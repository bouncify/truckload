
<div id="koModalOrderEdit" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg" style="width: 759px">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header k-window-titlebar k-dialog-titlebar k-header">
                <img class="modal-header-icon"
                     title="Dangerous Goods" data-bind="visible: isDangerousGoods"
                     src="@ViewBag.AppPath/App/Content/Images/poison_small.png" />
                <img class="modal-header-icon"
                     title="Customer Pickup" data-bind="visible: isCustomerPickup"
                     src="@ViewBag.AppPath/App/Content/Images/customer_pickup3_small.png" />
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Order <span data-bind="text: orderNumber"></span> (<span data-bind="text: orderId"></span>)</h4>
                <span id="lastChangeOrderText" data-bind="text: lastChangeDescription"></span>
            </div>

            <div class="modal-body" style="margin-left: 50px">
                <div class="row form-group">
                    <div class="col-md-4">
                        <select class="form-control" data-bind="
                        options: shared.dropDownData.warehouseList,
                        optionsText: 'text',
                        optionsValue: 'valueInt',
                        optionsCaption: 'Select Warehouse...',
                       value: warehouseId,
                       style: { background: warehouseId() ? '#fff' : '#FF0' }"></select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-xs-4"><input type="text" class="form-control" placeholder="Order Number" data-bind="value: orderNumber"></div>
                    <div class="col-xs-4"><input type="text" class="form-control" placeholder="Customer Name" data-bind="value: customerName"></div>
                </div>

                <div class="row form-group">
                    <div class="col-xs-4"><input type="text" class="form-control" placeholder="Customer Address" data-bind="value: customerAddress"></div>
                    <div class="col-xs-4"><input type="text" class="form-control" placeholder="Destination" data-bind="value: destination"></div>
                </div>

                <div class="row form-group">
                    <div class="col-xs-3"><input type="number" min="0" class="form-control" placeholder="Volume *" data-bind="value: volume, style: { background: volume()>0 ? '#fff' : '#FF0' }"></div>
                    <div class="col-xs-3">
                        <select class="form-control" data-bind="
                        options: shared.dropDownData.unitsOfMeasureList,
                        optionsText: 'text',
                        optionsValue: 'valueInt',
                        optionsCaption: 'Select Unit Type...',
                       value: unitOfMeasureId, style: { background: unitOfMeasureId() ? '#fff' : '#FF0' }"></select>
                    </div>
                    <div class="col-xs-2"><input type="number" min="0" class="form-control" placeholder="Weight  *" data-bind="value: weightKg, style: { background: weightKg()>0 ? '#fff' : '#FF0' }"></div>
                </div>

                <div class="row form-group">
                    <label class="col-xs-3 control-label" style="padding-top: 5px">Pickup Date</label>
                    <input data-bind="kendoDateTimePicker: pickupDate" />
                </div>

                <div class="row form-group">
                    <label class="col-xs-3 control-label" style="padding-top: 5px">Delivery Date</label>
                    <input data-bind="kendoDateTimePicker: deliveryDate" />
                </div>

                <div class="row form-group">
                    <input class="col-xs-1" style="margin-top: 8px;" type="checkbox" data-bind="checked: isDangerousGoods" />
                    <label class="col-xs-5 control-label" style="padding-top: 5px">Dangerous Goods</label>
                </div>

                <div class="row form-group">
                    <input class="col-xs-1" style="margin-top: 8px;" type="checkbox" data-bind="checked: isCustomerPickup" />
                    <label class="col-xs-5 control-label" style="padding-top: 5px">Customer Pickup</label>
                </div>

                <div class="form-group">
                    <span class="col-xs-1"><strong>Notes</strong></span>
                    <textarea class="form-control" rows="3" cols="50" data-bind="value: notes"></textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button id="modal_btnSave" type="button" class="k-button k-primary" data-bind="click: save">Save</button>
                <button id="modal_btnCancel" type="button" class="k-button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>