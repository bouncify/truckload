
<div class="modal" id="koModalEditLoad" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header k-window-titlebar k-dialog-titlebar k-header" style="padding-top: 15px; padding-bottom: 0; padding-left: 15px; min-height: 75px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Load <span data-bind="text: loadId"></span></h4>
                <span style="font-size: 10px; position: absolute;" data-bind="text: loadDateText"></span>
            </div>
            <div class="modal-body" style="height: 470px">
                <div class="row form-group">
                    <div class="col-md-5">
                        <select class="form-control"
                                data-bind="
                                        enable: isEditable,
                                        options: shared.dropDownData.truckList,
                                        optionsText: 'text',
                                        optionsValue: 'valueInt',
                                        optionsCaption: 'Truck...',
                                        value: truckId"></select>
                    </div>
                    <div class="col-md-5">
                        <select class="form-control"
                                data-bind="
                                        enable: isChangeStatusAllowed,
                                        options: shared.dropDownData.loadStatusList,
                                        optionsText: 'text',
                                        optionsValue: 'valueInt',
                                        value: loadStatusId"></select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-5">
                        <select class="form-control"
                                data-bind="
                                        enable: isEditable,
                                        options: shared.dropDownData.trailerList,
                                        optionsText: 'text',
                                        optionsValue: 'valueInt',
                                        optionsCaption: 'Trailer...',
                                        value: trailerId"></select>
                    </div>
                    <div class="col-md-5">
                        <input data-bind="kendoDateTimePicker: {value: loadDate, enabled: isEditable}" />
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-5">
                        <select class="form-control"
                                data-bind="
                                        enable: isEditable,
                                        options: shared.dropDownData.driverList,
                                        optionsText: 'text',
                                        optionsValue: 'valueInt',
                                        optionsCaption: 'Driver...',
                                        value: driverId"></select>
                    </div>
                    <div class="col-xs-6 demo-hint" style="margin-top: 25px">(Drag orders with the mouse to change sort order.)</div>
                </div>

                
                <script>
                    $(function () {
                        $("#sortableList").sortable();
                        $("#sortableList").sortable("option", "disabled", true);
                        $("#sortableList").disableSelection();
                    });
                </script>
                
                <ul id="sortableList" data-bind="foreach: { data: ordersList }">
                    <li class="sortableOrder">
                        <div id="sortOrderListRow">
                            <span name="orderId" style="display: none" data-bind="text: orderId"></span>
                            <span class="sortableListItem" style="width: 180px" data-bind="text: orderNumber"></span>
                            <span class="sortableListItem" style="width: 130px" data-bind="text: unitDescription"></span>
                            <span class="sortableListItem" style="width: 130px" data-bind="text: warehouseDescription"></span>
                            <img class="listItemImage" title="Dangerous Goods" data-bind="visible: isDangerousGoods" src="@ViewBag.AppPath/App/Content/Images/poison_small.png" />
                            <img class="listItemImage" title="Customer Pickup" data-bind="visible: isCustomerPickup" src="@ViewBag.AppPath/App/Content/Images/customer_pickup3_small.png" />
                        </div>
                    </li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bind="click: save">Ok</button>
                <button type="button" class="btn btn-default" data-bind="click: cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
