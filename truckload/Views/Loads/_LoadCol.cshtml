
<div id="loadCol1" class="loadCol" style="width: 357px; float: left;">
    <div style="float: left">
        <button type="button" title="Previous Day" class="btn btn-default day-nav-button" style="float: left"
                @*data-bind="click: previousDay"*@>
            <span class="k-icon k-i-undo"></span>
        </button>
    </div>
    <div style="float: left">
        <input id="miniLoadDateButton" class="miniKendoDatePicker"
               @*data-bind="kendoDatePicker: startDay"*@ />
    </div>
    <div style="float: left; margin-left: 10px">Some text</div>
    <div style="float: right">
        <button type="button" title="Next Day" class="btn btn-default day-nav-button" style="float: right"
                @*data-bind="click: nextDay"*@>
            <span class="k-icon k-i-redo"></span>
        </button>
    </div>
    <div style="float: right">
        <button type="button" title="Create Load" class="k-button k-button-icontext create-load-button"
                @*data-bind="click: function() { newLoadClick($data.day3()) }"*@>
            <span class="k-icon k-i-plus"></span>
        </button>
    </div>
</div>
